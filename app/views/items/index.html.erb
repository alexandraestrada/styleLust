<script>
$(function() {      
      //Enable swiping...
      $("#swipe").swipe( {
        //Generic swipe handler for all directions
        swipeLeft:function(event, direction, distance, duration, fingerCount) {
          console.log("You swiped " + direction );  
          $.post('<%= items_path(cat: params[:cat], price: params[:price], is_like: false) %>', function(response) {
          	location.href = location.href;
          });
        },
        swipeRight:function(event, direction, distance, duration, fingerCount) {
          console.log("You swiped " + direction );  
          $.post('<%= items_path(cat: params[:cat], price: params[:price], is_like: true) %>', function(response) {
          	location.href = location.href;
          });
        },
        //Default is 75px, set to 0 for demo so any distance triggers swipe
         threshold:50
      });
    });
</script>


<body class="shop">
<h1 class="play"><%= @items.first.category.name.upcase %></h1>
 <div class="row" id="swipe">
 		<div class="deckcontainer large-12 small-12 columns">
	    <div id="itemdeck">
	      <% url = @items.first.click_url %>
        <% image = @items.first.photo %>
        <%= link_to image_tag(image) , url %> 
	      <br>
	    </div>

	    <div class="product-details">
	    	<%= @items.first.name %>
	    	<br>
        <%= @items.first.price %>
      </div>

	  </div>


    <div class="buttongroup">
        <%= link_to "LOSE", items_path(cat: params[:cat], price: params[:price], is_like: false), class: "button lose", method: 'post' %>

  		<div class="show-for-small-only">
        <%= link_to "BUY",url,class: "button buy" %>
      </div>

  		<div class="show-for-medium-up">
  			<%= link_to "BUY", '#myModal', 'data-reveal-id'=> "myModal", class: "button buy" %>
  		</div> 
  		
        <%= link_to "LUST", items_path(cat: params[:cat], price: params[:price], is_like: true), class: "button lust", method: 'post' %>
    </div>

		 <%=render partial:'items/modal' %>

  </div>
</body>