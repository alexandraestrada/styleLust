<h1>Category</h1>
<%= current_user.email %>
 <div class="row">
 		<div class="small-12 columns deckcontainer">
	    <div class="large-12 small-12 columns" id="itemdeck">
	      <!-- <img src="http://placehold.it/450x450&text=[img]"> -->
	      <% url = @items.first.click_url %>
        <% image = @items.first.photo %>
        <%= link_to image_tag(image) , url %><br /> 
	      <br><br>
	    </div>
	  </div>
		<%= @items.first.name %>
        <%= @items.first.price %>
    <br><br>
		<div class="large-12 small-12 columns" id="likebar">
 	 		<%= link_to "Dislike", items_path(cat: params[:cat], price: params[:price], is_like: false), class: "button", method: 'post' %>
 	 		<%= link_to "Buy Now", url, class: "button" %>
 			<%= link_to "Love", items_path(cat: params[:cat], price: params[:price], is_like: true), class: "button", method: 'post' %>
    </div>
  </div>