<body class="home">

<div class="row">
  <div class="large-3 columns">
    <h1 id="logo">STYLELUST</h1>
  </div>
</div>
  
<!-- End Header -->
 
<!-- First Band (Slider) -->
<div class="show-for-medium-up">
  <div id="b">
    <%= image_tag("girl2.png", class: "girl2") %>
    <p class="banner">
      Get ridiculously good looking<br>
      with our Top trends & Best deals.
    </p>
    <% if !current_user %>
    <div class="front">
      <%= link_to "SIGN UP NOW", new_user_path, class: "button", id: "signup" %>
      <!-- <a href="#" class="button" id="signup">SIGN UP NOW</a> -->
      <%= link_to "SIGN IN", new_auth_path, class: "button", id: "signin" %>
      <!-- <a href="#" class="button" id="signin">SIGN IN</a> -->
    </div>
    <% end %>
  </div>

</div>


<!-- Three-up Content Blocks -->
<div class="row">
  <div class="large-4 columns">
    <%= image_tag("collab.svg", class: "front-icons") %>
    <h4>Trending stuff.</h4>
    <p>Users always have needs for apps, websites and services that don't exist yet.</p>
  </div>
    
  <div class="large-4 columns">
    <%= image_tag("collab.svg", class: "front-icons") %>
    <h4>Just for you.</h4>
    <p>Developers and creators always have a need to get inspiration from users.</p>
  </div>
    
  <div class="large-4 columns">
    <%= image_tag("collab.svg", class: "front-icons") %>
    <h4>New stuff.</h4>
    <p>Introducing MuseLab - the first platform where user needs inspire creators.</p>
  </div>
  
</div>

<!-- Three-up Content Blocks -->
<h1 id="logo">HOT NOW</h1>
<div class="row" id="hotnow"></div>
<br>
<!-- Call to Action Panel -->
<div class="row">
    <div class="large-12 columns">
    
      <div class="panel">
        <h4>Get started!</h4>
            
        <div class="row">
          <div class="large-9 columns">
            <p>Find the perfect items for you now.</p>
          </div>
          <div class="large-3 columns">
            <% if current_user %>
            <%= link_to items_path do %>
              <p class="radius button right signup">Explore Now</p><% end %>
            <% else %>
            <%= link_to new_auth_path do %>
              <p class="radius button right signup">Explore Now</p><% end %>
            <% end %>
          </div>
        </div>
      </div>
    
    </div>
</div>

<script id="hotnow-template" type="text/x-handlebars-template">
  {{#each items}}
    <a href="{{click_url}}">
      <div class="large-4 columns hotnow">
        <img src="{{image_url}}" />
        <h5>{{name}}</h5>
      </div>
    </a>
  {{/each}}
</script>
<script type="text/javascript">
  $(function() {
    loadHotNow();
  });
</script>

</body>
