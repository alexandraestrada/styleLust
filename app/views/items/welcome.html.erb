<!-- Header -->
<div class="show-for-medium-up">
  <div class="row">
    <div class="large-3 columns">
      <h1 id="logo">STYLELUST</h1>
    </div>
  </div>
</div>  


<h1 class="show-for-small-only" id="logo-small">STYLELUST</h1>
<!-- End Header -->
 
<!-- First Band (Weekend Update) -->

<div id="front-image"></div>


<!-- Three-up Content Blocks -->
<div class="parallax-wrapper">
  <div class="row">

    <div class="large-4 columns">
      <div class="icon-info" data-tooltip data-options="disable_for_touch:true" title= "Discover new fashion styles and trends from the hottest brands.">
        <%= image_tag("discover.svg", class: "front-icons expandOpen") %>
      </div>
        <h4>Discover</h4>
    </div>

    <div class="large-4 columns">
      <div class="icon-info" data-tooltip data-options="disable_for_touch:true" title= "Share your lookbooks with your friends on Facebook or Instagram.">
        <%= image_tag("share.svg", class: "front-icons expandOpen") %>
      </div>
        <h4>Share</h4>
    </div>

    <div class="large-4 columns">
      <div class="icon-info" data-tooltip data-options="disable_for_touch:true" title= "Buy your favorite items from hundreds of brands in one location.">
        <%= image_tag("shop.svg", class: "front-icons expandOpen") %>
      </div>
        <h4>Shop</h4>
    </div>
    
  </div>

  <hr id="cta" />
  <% if current_user %>
              
    <%= link_to items_path do %>
  <div id="explore">Explore Now</div><% end %>
  <% else %>
    <%= link_to new_auth_path do %>
  <div id="explore">Explore Now</div><% end %>
  <% end %>


<!-- Hot Now -->


  


  <h1 id="logo">HOT NOW</h1>
  <div class="row" id="hotnow"></div>

  <%=link_to hotPicks_path do %>
  <div id="hotbutton">See More &nbsp; &#62;</div>
  <%end%>

</div>

<script id="hotnow-template" type="text/x-handlebars-template">
  {{#each items}}
    <a href="{{click_url}}">
      <div class="large-4 columns hotnow">
        <img src="{{image_url}}" class="desaturate" />
        <h5>{{name}}</h5>
      </div>
    </a>
  {{/each}}
</script>
<script type="text/javascript">
  $(function() {
    loadHotPicks3();
  



  $(window).bind('scroll',function(e){
      parallaxScroll();
  });
 
  function parallaxScroll(){
    var scrolled = $(window).scrollTop();

    $('.parallax-wrapper').css('top',(0-(scrolled*.9))+'px');
  }
});
</script>
