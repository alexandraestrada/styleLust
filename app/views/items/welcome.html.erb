<body class="home">

<div class="section">


<div class="row">
  <div class="large-3 columns">
    <h1 id="logo">STYLELUST</h1>
  </div>
</div>
  
<!-- End Header -->
 
<!-- First Band (Slider) -->
<div class="show-for-medium-up">
  <div id="b">
    <%= image_tag("girl2.png", class: "girl2") %>
    <p class="banner">
      Get ridiculously good looking<br>
      with our Top trends & Best deals.
    </p>
    <% if !current_user %>
    <div class="front">
      <%= link_to "SIGN UP NOW", new_user_path, class: "button", id: "signup" %>
      <%= link_to "SIGN IN", new_auth_path, class: "button", id: "signin" %>
    </div>
    <% end %>
  </div>

</div>


<!-- Three-up Content Blocks -->
<div class="row">
  <div class="large-4 columns">
    <%= image_tag("discover.svg", class: "front-icons") %>
    <h4>Discover</h4>
    <p class="welcometext">Discover new fashion styles and trends from the hottest brands.</p>
  </div>
    
  <div class="large-4 columns">
    <%= image_tag("share.svg", class: "front-icons") %>
    <h4>Share</h4>
    <p class="welcometext">Share your lookbooks with your friends on Facebook or Instagram.</p>
  </div>
    
  <div class="large-4 columns">
    <%= image_tag("shop.svg", class: "front-icons") %>
    <h4>Shop</h4>
    <p class="welcometext"> Buy your favorite items from hundreds of brands in one location.</p>
  </div>
  
</div>

</div>


<!-- Hot Now -->
<div class="section">

<h1 id="logo">HOT NOW</h1>
<div class="row" id="hotnow"></div>
<br>
<!-- Call to Action Panel -->
<div class="row">
    <div class="large-12 columns">
    
      <div class="panel">
        <h4>Get started!</h4>
            
        <div class="row">
          <div class="large-9 columns">
            <p>Find the perfect items for you now.</p>
          </div>
          <div class="large-3 columns">
            <% if current_user %>
            
            <%= link_to items_path do %>
              <p class="radius button right signup">Explore Now</p><% end %>
            <% else %>
            <%= link_to new_auth_path do %>
              <p class="radius button right signup">Explore Now</p><% end %>
            <% end %>
          </div>
        </div>
      </div>
    
    </div>
</div>

</div>



<script id="hotnow-template" type="text/x-handlebars-template">
  {{#each items}}
    <a href="{{click_url}}">
      <div class="large-4 columns hotnow">
        <img src="{{image_url}}" />
        <h5>{{name}}</h5>
      </div>
    </a>
  {{/each}}
</script>
<script type="text/javascript">
  $(function() {
    loadHotNow();
  });
</script>

</body>
